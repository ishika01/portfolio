@require '_variables'
@require '_mixins'

.r-related-stories
  .r-story-list
    margin-top 100px

.r-related-stories-title-container
  position relative
  border-bottom 1px solid $color-grey-dark

.r-related-stories-title
  position absolute
  top 50%
  left 50%
  padding 5px 15px
  background-color $color-lightest
  color $color-grey-dark
  font-size $font-size-xxs
  font-weight bold
  text-transform uppercase
  transform('translate(-50%,-50%)')
