@require '_variables'
@require '_mixins'

.r-story-list
  display grid
  grid-template-columns 1fr 1fr 1fr
  grid-gap 100px 50px
  h2,
  p
    margin-top 20px
  img
    width 100%

.r-story-list-header
  background-color $color-grey-lighter
  border-radius 12px
  overflow hidden

.r-story-list-portuguese
  h3
    margin 30px 0 10px

+breakpoint('xs')
  .r-story-list
    grid-template-columns 1fr
