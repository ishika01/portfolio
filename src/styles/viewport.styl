@require '_variables'
@require '_mixins'

.r-viewport
  position relative
  .r-sidebar
    position fixed
    top 0
    left 0
    overflow-x hidden
    overflow-y scroll
    z-index $layer-high
    transition(all, 300ms)
    transform('translate3d(-100%,0,0)')
    box-shadow(3px 0 32px 0 alpha($color-darkest, 0))
    &.r-sidebar-visible
      transform('translate3d(0,0,0)')
      box-shadow(3px 0 32px 0 alpha($color-darkest, .25))
  .r-topbar
    position fixed
    top 0
    width 100%
  .r-hero
    .r-section
      padding 256px 0

+breakpoint('xs')
  .r-viewport
    .r-hero
      .r-section
        padding 128px 0
