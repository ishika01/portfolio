@require '_variables'
@require '_mixins'

.r-home-hero
  .r-container
    position relative
  .r-mobile
    position absolute
    top 0
    right 0
  .r-home-mobile-panel
    transform('scale(.75)')
  p
    margin-top 10px
    font-size $font-size-xs

.r-home-hero-copy-container
  max-width 700px

.r-home-hero-art-container
  position absolute
  top -150px
  right 0

+breakpoint('xs')
  .r-home-hero-art-container
    display none

+breakpoint('sm')
  .r-home-hero
    h1
      max-width 435px
